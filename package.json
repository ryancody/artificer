{
  "name": "artificer",
  "version": "0.0.1",
  "description": "interact with contracts via artifacts created by truffle",
  "main": "index.js",
  "scripts": {
    "start-chain": "ganache-cli -p 8545 --mnemonic \"process.env.MNEMONIC\" --networkId 1234 --db ./local-chain-data",
    "test": "node scripts/start-dev.js",
    "compile": "truffle compile && apply-registry build/contracts",
    "dev": "node scripts/copy-contract-data.js && cd dev-app && npm start && gulp main"
  },
  "author": "r.cody",
  "license": "ISC",
  "devDependencies": {
    "ganache-cli": "^6.1.8",
    "gulp": "^3.9.1",
    "gulp-less": "^4.0.1",
    "gulp-sass": "^4.0.2",
    "truffle": "^4.1.14"
  }
}
